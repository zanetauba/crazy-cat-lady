<%= link_to "Add a new pet", new_pet_path, class: "btn btn-primary" %>

<div class="main">
  <h1 class="page-title"></h1>
  <p class="page-description"></p>

  <div class="row">
    <% @listings.each do |listing| %>
      <div class="col-xs-12 col-sm-6 col-md-3">
      <%= link_to listing do  %>

        <div class="listing-card">
          <div class="card">
            <div class="card-content">
              <div class="content">
                <h3 class="title"><%= listing.title %></h3>
                  <% if listing.user == current_user %>
                     <p>this is your listing!</p>
                  <%end%>
                <p class="description">
                 <ul>
                  <li>average rating: <%=listing.reviews.average(:rating)%></li>
                  <li><%=listing.description%></li>
                  <li>Location: <%=listing.location%></li>
                  <li>Hosted by: <%=listing.user.name%> <%=listing.user.surname%></li>
                  <li>$ <%=listing.price_per_day%> per day</li>
                  <% listing.photos.each do |photo| %>
                  <li><%=cl_image_tag photo.key, height: 70, width: 80, crop: :fill %></li>

                  </ul>
                </p>
              </div>
            </div>
          </div>
        </div>
      <% end %>
      </div>
    <%end%>
    <% end %>
  </div>

 </div>


<div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>


