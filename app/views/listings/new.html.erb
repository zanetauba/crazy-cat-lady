<%= simple_form_for @listing do |f| %>
  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :price_per_day %>
    <%= f.input :location %>
    <%= f.input :photos, as: :file, input_html: { multiple: true}, label: 'Upload photos', label_html: { class: 'upload-photo'} %>
  </div>
  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-default btn-warning btn-book' %>
  </div>
<% end %>
